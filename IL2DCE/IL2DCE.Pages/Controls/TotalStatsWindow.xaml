<Window x:Class="IL2DCE.Pages.Controls.TotalStatsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IL2DCE.Pages.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280" Title="Total Status [IL2DCE]" Loaded="Window_Loaded" FontSize="16" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="textBoxStats" Margin="0,0,0,50" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="16" IsReadOnly="True" FontFamily="Consolas"/>
        <Button x:Name="buttonClose" Content="Close" HorizontalAlignment="Center" Margin="0,0,0,8" VerticalAlignment="Bottom" FontSize="24" Width="112" Click="buttonClose_Click" Height="36"/>
    </Grid>
</Window>
