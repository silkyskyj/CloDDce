        <Label Content="Select Army:" Height="52" Margin="34,293,1000,0" Name="labelSelectArmy" VerticalAlignment="Top" FontSize="28" Foreground="#FFA0854A" />
        <ComboBox Height="50" HorizontalAlignment="Left" Margin="34,357,0,0" Name="comboBoxSelectArmy" VerticalAlignment="Top" Width="617" FontSize="28" Foreground="#FFA0854A" TabIndex="2">
