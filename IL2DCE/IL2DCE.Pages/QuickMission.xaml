        <Label Content="Select Altitude:" Height="52" HorizontalAlignment="Left" Margin="244,745,0,0" x:Name="labelSelectAltitude" VerticalAlignment="Top" Width="226" FontSize="28" Foreground="#FFA0854A" />
        <ComboBox Height="50" HorizontalAlignment="Left" Margin="244,808,0,0" x:Name="comboBoxSelectAltitude" VerticalAlignment="Top" Width="200" FontSize="28" Foreground="#FFA0854A" Background="#00000000"/>

