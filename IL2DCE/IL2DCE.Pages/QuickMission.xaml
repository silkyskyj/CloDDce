        <Label Content="Select Air Force:" Height="52" Margin="34,425,1000,0" x:Name="labelSelectAirForce" VerticalAlignment="Top" FontSize="28" Foreground="#FFA0854A" />
        <ComboBox Height="50" HorizontalAlignment="Left" Margin="34,489,0,0" x:Name="comboBoxSelectAirForce" VerticalAlignment="Top" Width="617" FontSize="28" Foreground="#FFA0854A" Background="#00000000" TabIndex="3"/>

