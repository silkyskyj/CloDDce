        <ComboBox Height="50" HorizontalAlignment="Left" Margin="1465,214,0,0" x:Name="comboBoxSelectSkill" VerticalAlignment="Top" Width="150" FontSize="28" Foreground="#FFA0854A" Background="#00000000" TabIndex="6"/>
    </Grid>
</UserControl>
