<UserControl x:Class="IL2DCE.Pages.CampaignIntro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" xmlns:my="clr-namespace:maddox.game.page;assembly=gamePages" xmlns:my1="clr-namespace:maddox.game.play;assembly=gamePages" Height="914" Width="1672">
    <Grid Height="898" Width="1652" HorizontalAlignment="Left" VerticalAlignment="Center">
        <Label Content="Campaign Intro" Height="138" HorizontalAlignment="Left" Margin="12,12,0,0" Name="labelCampaignIntro" VerticalAlignment="Top" Width="640" FontSize="64" FontWeight="Bold" Foreground="#FF791313" />
        <my1:ButtonAsMenuItem Content="Start" Height="77" HorizontalAlignment="Left" Margin="1434,809,0,0" Name="Start" VerticalAlignment="Top" Width="206" RenderTransformOrigin="6.394,7.367" />
        <my1:ButtonAsMenuItem Content="Back" Height="77" HorizontalAlignment="Left" Margin="38,809,0,0" Name="Back" VerticalAlignment="Top" Width="206" />
        <ComboBox Height="63" HorizontalAlignment="Left" Margin="36,234,0,0" Name="comboBoxSelectAirGroup" VerticalAlignment="Top" Width="900" FontSize="28" Foreground="#FFA0854A">
            <ComboBox.Background>
                <SolidColorBrush />
            </ComboBox.Background>
        </ComboBox>
        <Label Content="Select Air Group:" HorizontalAlignment="Left" Margin="36,164,0,0" Name="labelSelectAirGroup" VerticalAlignment="Top" Width="617" FontSize="28" Foreground="#FFA0854A" />
        <Label Content="Select Period:" HorizontalAlignment="Left" Margin="36,335,0,0" x:Name="labelSelectPeriod" VerticalAlignment="Top" Width="617" FontSize="28" Foreground="#FFA0854A" />
        <DatePicker x:Name="datePickerStart" HorizontalAlignment="Left" Margin="36,405,0,0" VerticalAlignment="Top" FontSize="36" SelectedDateFormat="Long" Width="400" Background="#FFA0854A" IsTodayHighlighted="True">
            <DatePicker.CalendarStyle>
                <Style TargetType="Calendar">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="2" ScaleY="2"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DatePicker.CalendarStyle>
        </DatePicker>
        <DatePicker x:Name="datePickerEnd" HorizontalAlignment="Left" Margin="530,405,0,0" VerticalAlignment="Top" Width="400" FontSize="36" SelectedDateFormat="Long" Background="#FFA0854A">
            <DatePicker.CalendarStyle>
                <Style TargetType="Calendar">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="2" ScaleY="2"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DatePicker.CalendarStyle>
        </DatePicker>
        <Label Content=" - " HorizontalAlignment="Left" Margin="454,392,0,0" x:Name="labelSelectPeriodRange_" VerticalAlignment="Top" Width="61" FontSize="48" Foreground="#FFA0854A" RenderTransformOrigin="2.623,0.795" />
        <Border x:Name="borderImage" BorderBrush="#FFA0854A" BorderThickness="2" Margin="37,532,1357,184" Width="258" Height="182" Background="#20F7F2F2" Opacity="1">
            <Image x:Name="imageAircraft" HorizontalAlignment="Left" Height="180"  VerticalAlignment="Top" Width="256" RenderTransformOrigin="-1.555,1.944"/>
        </Border>
    </Grid>
</UserControl>
